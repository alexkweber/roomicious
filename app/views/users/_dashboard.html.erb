<div class="modal_header">
  <button type="button" class="close" data-dismiss="modal">Ã—</button>
	Dashboard
</div>
<div class="modal_body">
	<div class="form-general-info well">
		<table class="table">
			<tbody>
				<tr><td><b>Account Email:</b></td><td><%= @user.email %></td><td><%= link_to 'Change your password', edit_user_path(@user) %></td></tr>
			</tbody>
		</table>
		<h2 class="left-align">Manage your places</h2>
		<table class="table table-round">
			<tbody>
				<tr>				
					<td><%= link_to "Add New", new_posting_path, :class => "left-align" %></td>
				</tr>
				<% @user.postings.all.each do |posting| %>
				<tr>
					<td><b>Address: </b></td>
					<td><%= link_to posting.address, posting, :remote => true %></td>
					<td><%= link_to raw("<i class='icon-trash'></i>"), posting, 
									:confirm => "Are you sure you want to delete this posting?",
									:method => :delete %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
<div class="modal_footer">
	<%= link_to "Close", '#', :class => "btn btn-large", :"data-dismiss" => "modal" if request.xhr? %>
</div>