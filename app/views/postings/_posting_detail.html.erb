<div class="modal_header">
  <button type="button" class="close" data-dismiss="modal">Ã—</button>
	<%= @posting.address %>
</div>
<div class="modal_body">
 	<div class="post-pic-outer well">
		<div class="post-pic-inner">
		  <%= image_tag @posting.photo.url(:medium) %>
			<%= render 'show_map' %>
		</div>
	</div>
	<div class="form-general-info well">
		<legend><%= @posting.address %></legend>
		<table class="table">
			<tbody>
				<tr><td>Price:</td><td><%= number_to_currency( @posting.rent ) %></td></tr>
				<tr><td>Message:</td><td><%= @posting.message %></td></tr>
			</tbody>
		</table>
	</div>
</div>
<div class="modal_footer">
	<% if current_user == @posting.user %>
		<%= link_to "Dashboard", current_user, :class => "btn btn-large", :remote => true %>
		<%= link_to "Edit", edit_posting_path(@posting), :class => "btn btn-large", :remote => true %>
		<%= link_to "Delete?", @posting, :method => :delete,
																		:class => "btn btn-large btn-primary",
																		:data => { :confirm => "Are you sure you want to delete this post?" } %>
	<% else %>
		<%= link_to "Contact", @posting.user, :class => "btn btn-large btn-primary" %>
	<% end %>
	<%= link_to "Close", '#', :class => "btn btn-large", :"data-dismiss" => "modal" if request.xhr? %>
</div>